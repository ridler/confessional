<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="../../assets/ico/favicon.ico">

    <title>The Confessional</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">The Confessional</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/">Home</a></li>
            <li><a href="/submit">Confess</a></li>
            <li><a href="#">Help</a></li>
          </ul>
          <form class="navbar-form navbar-right" method="post" action="/search">
            <input type="text" class="form-control" placeholder="Search...">
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </div>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1></br>The Confessional</h1>
        <p>Tell me all of your dirty little secrets.</p>
        <p><a class="btn btn-primary btn-lg" role="button" href="/submit">Confess &raquo;</a></p>
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
      <% for(i = 0; i < confessions.length; i++) { %>
        <div class="col-md-4">
          <h4><%= confessions[i].created_at %></h4>
          <h5><%= confessions[i].body %></h5>
          <p>+ : <span class="likeCount" id="<%=confessions[i].id%>"><%= confessions[i].likes %></span> | - : <span class="dislikeCount" id="<%=confessions[i].id%>"><%= confessions[i].dislikes %></span>
          <a class="like" style="cursor: pointer" id="<%=confessions[i].id%>" role="button">Like</a> | <a class="dislike" id="<%=confessions[i].id%>" style="cursor: pointer" role="button">Dislike</a></p>
          <div class="input-group input-group-md" style="width:80%">
            <textarea type="textarea" form="comment<%=confessions[i].id%>" name="content" class="form-control" placeholder="comment" style="margin-bottom:6px; height:50px"></textarea>
        </div>
        <form method="post" id="comment<%=confessions[i].id%>" action="/comment">
          <button type="submit" id="<%=confessions[i].id%>" class="comment btn btn-primary btn-sm">Submit &raquo;</button>
        </form>
          <!-- <p><span style="color:blue">1/2/2012: </span>Comment 1<a class="btn btn-default" href="#" role="button" style="margin-left:5px">+</a><a class="btn btn-default" href="#" role="button">-</a></p>
          <p><span style="color:blue">1/4/2012: </span>Comment 2<a class="btn btn-default" href="#" role="button" style="margin-left:5px">+</a><a class="btn btn-default" href="#" role="button">-</a></p>
          <a class="btn btn-default" href="#" role="button">Comment</a> -->
        </div>
       <% }; %>
       </div>

      <hr>

      <footer>
        <p>&copy; Company 2014</p>
      </footer>
    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
    <script src="javascripts/aja.js"></script>
  </body>
</html>